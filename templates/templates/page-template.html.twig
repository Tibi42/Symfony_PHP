{# Page Template #}
{% set title = title|default('PHP Learning') %}
{% set sidebar = sidebar|default({}) %}
{% set mainContent = mainContent|default('') %}
{% set pageTitle = pageTitle|default('') %}
{% set classes = classes|default('') %}

<div class="app-container {{ classes }}">
	{% include 'organisms/sidebar.html.twig' with sidebar %}

	{% include 'organisms/main-content.html.twig' with {
        'title': pageTitle,
        'content': mainContent
    } %}
</div>

<style>
	.app-container {
		display: flex;
		min-height: 100vh;
	}

	/* Responsive */
	@media(max-width: 768px) {
		.app-container {
			flex-direction: column;
		}
	}
</style>

