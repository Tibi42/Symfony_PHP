{# Button Atom Component #}
{% set classes = classes|default('') %}
{% set variant = variant|default('primary') %}
{% set size = size|default('medium') %}

<button class="btn btn--{{ variant }} btn--{{ size }} {{ classes }}" {{ attributes|default('') }}>
	{% if icon %}
		<span class="btn__icon">{{ icon }}</span>
	{% endif %}
	{% if text %}
		<span class="btn__text">{{ text }}</span>
	{% endif %}
	{{ block('content') }}
</button>

<style>
	.btn {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		gap: 8px;
		border: none;
		border-radius: 8px;
		font-family: inherit;
		font-weight: 500;
		text-decoration: none;
		cursor: pointer;
		transition: all 0.3s ease;
		outline: none;
	}

	.btn:focus {
		box-shadow: 0 0 0 3px rgba(255, 105, 180, 0.3);
	}

	/* Variants */
	.btn--primary {
		background: linear-gradient(135deg, #8A2BE2 0%, #FF69B4 100%);
		color: white;
	}

	.btn--primary:hover {
		transform: translateY(-2px);
		box-shadow: 0 4px 12px rgba(138, 43, 226, 0.4);
	}

	.btn--secondary {
		background-color: #3F3D56;
		color: white;
	}

	.btn--secondary:hover {
		background-color: #4A485F;
	}

	.btn--link {
		background: transparent;
		color: #0066cc;
		text-decoration: underline;
	}

	.btn--link:hover {
		color: #004499;
	}

	/* Sizes */
	.btn--small {
		padding: 8px 12px;
		font-size: 14px;
	}

	.btn--medium {
		padding: 12px 16px;
		font-size: 16px;
	}

	.btn--large {
		padding: 16px 24px;
		font-size: 18px;
	}

	.btn__icon {
		font-size: 1.1em;
	}
</style>
