{% set classes = classes|default('') %}

<div class="modules-grid {{ classes }}">
	{% for module in modules %}
		{% include 'molecules/module-card.html.twig' with {
            'number': module.number|default(''),
            'title': module.title|default(''),
            'description': module.description|default(''),
            'linkHref': module.linkHref|default('#'),
            'linkText': module.linkText|default('En savoir plus →')
        } %}
	{% endfor %}
</div>

<style>
	.modules-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 24px;
		max-width: 1200px;
	}

	/* Responsive */
	@media(max-width: 768px) {
		.modules-grid {
			grid-template-columns: 1fr;
			gap: 16px;
		}
	}
</style>
